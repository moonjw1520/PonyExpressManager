<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardMaxElevation="20dp"
    >


    <LinearLayout
        android:id="@+id/card_view_state_evnet"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/color_main_recycler"
        >

        <!-- 행사현황 -->
        <TextView
            android:id="@+id/txt_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-12-23 행사현황"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사개수: "
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/txt_event_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
        </LinearLayout><!-- 행사현황 -->

        <!-- 배차현황 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-배차현황-"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

        </LinearLayout><!-- 배차현황 -->


        <!-- 문자발송/행사-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문자발송/행사: "
                android:textColor="@color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/txt_send_sms_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/txt_event_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/3"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

        </LinearLayout> <!-- 문자발송/행사-->

        <!-- 텍스트 영역 배차리스트 -->
        <LinearLayout
            android:id="@+id/text_view_area1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"

            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>


        <LinearLayout
            android:id="@+id/text_view_area3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>


        <LinearLayout
            android:id="@+id/text_view_area4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view_area4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout><!-- 텍스트 영역 배차리스트 -->

        <LinearLayout
            android:id="@+id/text_view_area4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout><!-- 텍스트 영역 배차리스트 -->



    </LinearLayout>

</androidx.cardview.widget.CardView>